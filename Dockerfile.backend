# Dockerfile.backend
FROM node:18-alpine

WORKDIR /app

# Copy package.json and package-lock.json
COPY apiserver/package*.json ./

# Install dependencies (production only)
RUN npm ci --only=production

# Copy all backend files
COPY apiserver ./

# Expose the backend port
EXPOSE 5000

# Correct entry point
CMD ["node", "index.js"]
